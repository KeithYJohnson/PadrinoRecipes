<html>
	<head>
   	<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
  </head>

	<body>

		<div>
			<div class ="header">
				<h2>The Amazing Recipe Index</h2>
			</div>

			<div>
				<h3> Search for Recipes</h3>
			</div>

			<%=flash[:notice] %> 

			<div>
				<% form_tag url_for(:recipe, :show) do %>
					<p>
						<%= label_tag :name %>
						<%= text_field_tag :name %>
					</p>
					<%= submit_tag %>	
				<% end %>
			</div>
		</div>	

   <div >
    <%= yield %>
   </div>

  </body>
</html>